#!/usr/bin/env ksh
# @(#)$Id: munchies_suenv 1206 2011-06-19 22:13:44Z pjf $

kbs=$(tput kbs) ; export ERASE=${kbs} ; stty erase ${kbs} -echoctl

if [ -d ${HOME}/.sh_history ]
then
   export HISTFILE=${HOME}/.sh_history/$(basename $(tty))
else
   export HISTFILE=${HOME}/.sh_history
fi

export START=${HOME}/.kshrc
export ENV='${START[(_$- = 1)+(_ = 0)-(_$- != _${-%%*i*})]}'

exec ${SHELL} -o emacs ${1}
